{
  "name": "stacks-mcp-server",
  "version": "1.0.0",
  "description": "Comprehensive MCP server for Stacks Bitcoin Layer 2 DeFi ecosystem",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:clarinet": "TEST_ENV=clarinet vitest run tests/integration",
    "test:clarinet:watch": "TEST_ENV=clarinet vitest tests/integration",
    "test:all": "pnpm test && pnpm test:clarinet"
  },
  "dependencies": {
    "@bitflowlabs/core-sdk": "^2.4.0",
    "@hirosystems/clarinet-sdk": "^3.8.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@stacks/auth": "^7.2.0",
    "@stacks/connect": "^8.2.0",
    "@stacks/network": "^7.2.0",
    "@stacks/stacking": "^7.2.0",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "@velarprotocol/velar-sdk": "^0.7.0-beta",
    "axios": "^1.6.0",
    "bns-v2-sdk": "^1.0.0",
    "dotenv": "^16.3.0",
    "vitest-environment-clarinet": "^2.3.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "stacks",
    "bitcoin",
    "defi",
    "layer2"
  ],
  "author": "Stacks Vibe Hackathon",
  "license": "MIT"
}